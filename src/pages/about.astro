---
// About.astro
import { Image } from 'astro:assets';
import BaseLayout from '../layouts/Base.astro';
import {SITE_TITLE} from '../consts';

const aboutPageImages = import.meta.glob('../assets/about/*.{jpg,png}', {
  eager: true,
  import: 'default',
})
---

<BaseLayout title={ 'About - ' + SITE_TITLE }>

  <div class="min-h-screen relative overflow-hidden mt-10">

    <div class="max-w-7xl mx-auto text-center mt-32 mb-20">
      <h1 class="text-5xl md:text-5xl font-bold text-center text-gray-900 mb-2 tracking-tight">
        Who We Are
      </h1>
      <div class="w-24 h-1 bg-gradient-to-r from-red-500 to-yellow-500 mx-auto rounded-full"></div>
      <div class="relative inline-block text-center mt-6">
        <h2 class="relative text-xl leading-relaxed px-8 pb-2 text-gray-400">
          Forum for Rural Infrastructural, Environmental & National Development Society 
          <span class="mt-3 text-xl">(FRIENDS)</span>
        </h2>
      </div>
    </div>

    <!-- Main Content -->
    <div class="relative z-10">
      
      <!-- Mission Section - Diagonal Split -->
      <section class="relative pb-24 overflow-hidden">
        <div class="absolute inset-0"></div>
        <div class="absolute top-0 right-0 w-1/2 h-full transform translate-x-1/4"></div>
        
        <div class="relative container mx-auto px-4">
          <div class="grid lg:grid-cols-2 gap-16 items-center max-w-7xl mx-auto">
            <div class="order-2 lg:order-1">
              <div class="relative group">
                <div class="absolute -inset-4 rounded-3xl blur-xl opacity-25 group-hover:opacity-40 transition-opacity"></div>
                <Image
                  class="relative rounded-3xl shadow-2xl w-full transform group-hover:scale-105 transition-all duration-500" 
                  src={aboutPageImages['../assets/about/community-awareness.jpg']}
                  alt="Helping create a better society"
                />
              </div>
            </div>
            <div class="order-1 lg:order-2">
              <span class="inline-block text-red-500 font-bold text-sm tracking-widest mb-4">OUR MISSION</span>
              <h3 class="text-3xl font-black text-gray-900 mb-8 leading-tight">
                Working With Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-orange-500">Mission</span>
              </h3>
              <p class="text-gray-600 text-lg leading-relaxed">
                We are dedicated to promoting empowerment of people, protection of the environment, service to Humanity in health care & support and respect for cultural diversity. Our commitment lies in implementing governmental schemes with the help of volunteer efforts so as to induce a significant change at the much needed grass roots levels of the society.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Vision Section - Card Overlap -->
      <section class="relative py-32 bg-gray-900">
        <div class="container mx-auto px-4">
          <div class="grid lg:grid-cols-2 gap-16 items-center max-w-7xl mx-auto">
            <div>
              <span class="inline-block text-yellow-400 font-bold text-sm tracking-widest mb-4">OUR VISION</span>
              <h3 class="text-3xl font-black text-white mb-8 leading-tight">
                Staying Focussed With Our <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-300 to-orange-400">Vision</span>
              </h3>
              <p class="text-gray-300 text-lg leading-relaxed">
                Our organization will distinguish itself as a pioneer in rendering social welfare services. It will further be recognized for the passion of its work in providing quality, innovative care to the betterment of all the communities it will be involved with.
              </p>
            </div>
            <div class="relative group">
              <div class="absolute -inset-4 bg-gradient-to-r from-yellow-500 to-orange-500 rounded-3xl blur-xl opacity-30 group-hover:opacity-50 transition-opacity"></div>
              <Image
                class="relative rounded-3xl shadow-2xl w-full transform group-hover:scale-105 transition-all duration-500" 
                src={aboutPageImages['../assets/about/doc-with-women.jpg']}
                alt="Pioneers in social service"
              />
            </div>
          </div>
        </div>
      </section>

      <!-- History Section - Bento Grid Style -->
      <section class="relative py-32">
        <div class="absolute inset-0"></div>
        <div class="relative container mx-auto px-4">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-20">
              <span class="inline-block text-orange-500 font-bold text-sm tracking-widest mb-4">SINCE 2000</span>
              <h3 class="text-3xl font-black text-gray-900 mb-6 leading-tight">
                Making a Better Society <br/>
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-500 to-red-500">One Friend at a Time</span>
              </h3>
            </div>
            
            <div class="grid lg:grid-cols-5 gap-8 items-center">
              <div class="lg:col-span-2 relative group">
                <div class="absolute -inset-4 rounded-3xl blur-xl opacity-25 group-hover:opacity-40 transition-opacity"></div>
                <Image
                  class="relative rounded-3xl shadow-2xl w-full h-full object-cover transform group-hover:scale-105 transition-all duration-500" 
                  src={aboutPageImages['../assets/about/doc-with-kid-and-pm.jpg']}
                  alt="Making Friends"
                />
              </div>
              <div class="lg:col-span-3 bg-white p-12 rounded-3xl shadow-xl">
                <p class="text-gray-600 text-xl leading-relaxed">
                  Formed in <span class="font-bold text-orange-500">2000</span>, we are a Non-Governmental Organisation (NGO) based in <span class="font-bold text-red-500">Haridwar, Uttarakhand</span>. Through our continuous involvement at the grass-root levels of the society, we have been successfully addressing the health related & socio-economic needs of the deprived sections of our society.
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Healthcare Section - Split with Stats -->
      <section class="relative py-32 bg-gray-900">
        <div class="container mx-auto px-4">
          <div class="max-w-7xl mx-auto">
            <div class="grid lg:grid-cols-2 gap-16 items-center">
              <div class="relative group order-2 lg:order-1">
                <div class="absolute -inset-4 rounded-3xl blur-xl opacity-40 group-hover:opacity-60 transition-opacity"></div>
                <Image
                  class="relative rounded-3xl shadow-2xl w-full transform group-hover:scale-105 transition-all duration-500" 
                  src={aboutPageImages['../assets/about/doc-bp.jpg']}
                  alt="Helping people in the slums"
                />
              </div>
              <div class="order-1 lg:order-2">
                <span class="inline-block text-red-400 font-bold text-sm tracking-widest mb-4">HEALTHCARE SERVICES</span>
                <h3 class="text-3xl font-black text-white mb-8 leading-tight">
                  Medical Services <span class="text-transparent bg-clip-text bg-gradient-to-r from-red-400 to-yellow-400">for the Slums</span>
                </h3>
                <p class="text-gray-300 text-lg leading-relaxed mb-8">
                  With 15 years of experience, we have undertaken various projects targeting core issues of the urban slums like women & child development, social welfare, health & hygiene, family planning, Ante Natal Care (ANC), Post Natal Care (PNC) & child immunization. We have further partnered on targeted intervention projects with focus on HIV AIDS.
                </p>
                <div class="grid grid-cols-2 gap-4">
                  <div class="bg-white/10 backdrop-blur-lg p-6 rounded-2xl border border-white/20">
                    <div class="text-3xl font-black text-yellow-400 mb-2">15+</div>
                    <div class="text-gray-300 text-sm">Years Experience</div>
                  </div>
                  <div class="bg-white/10 backdrop-blur-lg p-6 rounded-2xl border border-white/20">
                    <div class="text-3xl font-black text-red-400 mb-2">âˆž</div>
                    <div class="text-gray-300 text-sm">Lives Changed</div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Team Section - Feature Grid -->
      <section class="relative py-24">
        <div class="absolute inset-0"></div>
        <div class="relative container mx-auto px-4">
          <div class="max-w-7xl mx-auto">
            <div class="text-center mb-20">
              <span class="inline-block text-yellow-600 font-bold text-sm tracking-widest mb-4">OUR PEOPLE</span>
              <h3 class="text-3xl font-black text-gray-900 mb-6 leading-tight">
                Dedicated and <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-500 to-red-500">Well Trained Teams</span>
              </h3>
            </div>
            
            <div class="grid lg:grid-cols-3 gap-8 mb-16">
              <div class="bg-white p-8 rounded-3xl shadow-xl hover:shadow-2xl transition-shadow">
                <div class="w-16 h-16 bg-gradient-to-br from-red-500 to-orange-500 rounded-2xl flex items-center justify-center mb-6">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
                  </svg>
                </div>
                <h4 class="text-xl font-bold text-gray-900 mb-3">Medical Professionals</h4>
                <p class="text-gray-600">Experienced doctors, nurses, ANMs and GNMs</p>
              </div>
              
              <div class="bg-white p-8 rounded-3xl shadow-xl hover:shadow-2xl transition-shadow">
                <div class="w-16 h-16 bg-gradient-to-br from-orange-500 to-yellow-500 rounded-2xl flex items-center justify-center mb-6">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                </div>
                <h4 class="text-xl font-bold text-gray-900 mb-3">Community Workers</h4>
                <p class="text-gray-600">ASHA activists organizing camps and outreach</p>
              </div>
              
              <div class="bg-white p-8 rounded-3xl shadow-xl hover:shadow-2xl transition-shadow">
                <div class="w-16 h-16 bg-gradient-to-br from-yellow-500 to-red-500 rounded-2xl flex items-center justify-center mb-6">
                  <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z"></path>
                  </svg>
                </div>
                <h4 class="text-xl font-bold text-gray-900 mb-3">Awareness Campaigns</h4>
                <p class="text-gray-600">Spreading knowledge on health issues</p>
              </div>
            </div>

            <div class="relative group">
              <div class="absolute -inset-4 rounded-3xl blur-xl opacity-25 group-hover:opacity-40 transition-opacity"></div>
              <Image
                class="relative rounded-3xl shadow-2xl w-full transform group-hover:scale-[1.02] transition-all duration-500" 
                src={aboutPageImages['../assets/about/our-team.jpg']}
                alt="Our People"
              />
            </div>
          </div>
        </div>
      </section>

    </div>
  </div>

  <style>
    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }

    .animate-blob {
      animation: blob 7s infinite;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }

    .animation-delay-4000 {
      animation-delay: 4s;
    }
  </style>
</BaseLayout>

