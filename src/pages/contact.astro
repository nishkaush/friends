---

<BaseLayout title={ 'Contact and Locations - ' + SITE_TITLE }>
  <section class="min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-24 my-20">
      <!-- Locations Grid -->
    <div class="max-w-7xl mx-auto pb-20 text-center">
      <h1 class="text-5xl md:text-5xl font-bold text-center text-gray-900 mb-2 tracking-tight">
        Our Locations
      </h1>
      <div class="w-24 h-1 bg-gradient-to-r from-red-500 to-yellow-500 mx-auto rounded-full"></div>
      <p class="text-gray-400 text-lg max-w-2xl mx-auto mt-6">
        Get in touch with our staff at one of our health centres
      </p>
    </div>
    <!-- <div class="text-center mb-20">
      <h2 class="text-5xl font-bold bg-gradient-to-r from-red-500 via-orange-500 to-yellow-500 bg-clip-text text-transparent mb-4">
        Our Locations
      </h2>
    </div> -->

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {locations.map((location) => (
          <div class="bg-white rounded-xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden border-t-4 border-red-500 hover:-translate-y-1">
            <div class="bg-gradient-to-r from-orange-400 to-red-500 text-white px-6 py-3">
              <p class="text-sm font-semibold uppercase tracking-wide">{location.type}</p>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-gray-800 mb-4 flex items-start gap-2">
                <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                <span>{location.name}</span>
              </h3>
              
              <div class="space-y-3 text-gray-600">
                <p class="text-sm leading-relaxed">
                  <span class="font-semibold text-gray-700">Address:</span><br />
                  {location.address}
                </p>
                
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                  <span>+91 9412073651</span>
                </div>
                
                <div class="flex items-center gap-2 text-sm">
                  <svg class="w-4 h-4 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                  <span>friendshwr@gmail.com</span>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>