---
import BaseLayout from '../layouts/Base.astro';
import {SITE_TITLE} from '../consts';
---

<BaseLayout title={ 'Reports - ' + SITE_TITLE }>
  <section class="mt-20 py-24 px-4">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-5xl md:text-5xl font-bold text-center text-gray-900 mb-2 tracking-tight">
        Reports
      </h1>
      <div class="w-24 h-1 bg-gradient-to-r from-red-500 to-yellow-500 mx-auto rounded-full mb-16"></div>
      
      <div class="max-w-2xl mx-auto">
        <div class="bg-white rounded-xl shadow-lg p-8 hover:shadow-xl transition-shadow duration-300 border border-gray-100">
          <div class="flex items-center gap-4 mb-4">
            <div class="w-12 h-12 bg-gradient-to-r from-orange-500 to-orange-600 rounded-lg flex items-center justify-center flex-shrink-0">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
            </div>
            <div class="text-left flex-grow">
              <h2 class="text-xl font-bold text-gray-900">Annual Report 2013-2014</h2>
              <p class="text-sm text-gray-500 mt-1">Fiscal Year Report</p>
            </div>
          </div>
          <a
            target="_blank"
            href="https://drive.google.com/open?id=0Bx8HCAUydkPkOEk2YlA2RDdQLU0"
            class="block text-center bg-gradient-to-r from-orange-500 to-orange-600 hover:from-orange-600 hover:to-orange-700 text-white font-bold tracking-wider uppercase py-3 rounded-lg transition-all duration-300"
          >View Report</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>